{
    "name": "zaproxy/zap-api",
    "type": "library",
    "authors": [
        {
            "name": "José Carlos Chávez",
            "email": "jcchavezs@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Zap\\": "./src/Zap/"
        }
    },
    "require": {
        "ext-curl": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "friendsofphp/php-cs-fixer": "3.11.0"
    },
    "scripts": {
        "lint": "./vendor/bin/phpcs --standard=ZEND --standard=PSR2 --ignore=*/vendor/* ./",
        "fix-lint": [
            "./vendor/bin/phpcbf --standard=ZEND --standard=PSR2 --ignore=*/vendor/* -q ./ || true",
            "./vendor/bin/php-cs-fixer fix src/  --rules=@PhpCsFixer"
        ],
        "generate": [
            "cd ../zaproxy && ./gradlew generatePhpApiEndpoints",
            "@fix-lint",
            "@lint"
        ]
    }
}